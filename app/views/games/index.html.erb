<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
</head>

<div class="container">

<p id="notice"><%= notice %></p>

<h4><i class="fas fa-dice"></i> GAMES</h4>

<div class="card mb-3">
  <div class="card-body">
    <table class="table table-borderless table-hover">
      <thead>
        <tr>
          <th scope="col"><%= sort_link "name", "NAME" %></th>
          <th scope="col"><%= sort_link "year", "YEAR" %></th>
          <th scope="col"><%= sort_link "pcount", "PCOUNT" %></th>
          <th scope="col"><%= sort_link "owned", "OWNED" %></th>
          <th scope="col">LOGS</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= game.year %></td>
            <td><%= game.pcount %></td>
            <td><%=h show_check_icon(game.owned) %></td>
            <td><%= Log.where(game_id: game.id).count %></td>
            <td style="width: 45px;"><%= link_to game do %><i class="far fa-eye fa-fw"></i><% end %></td>
            <td style="width: 45px;"><%= link_to edit_game_path(game) do %><i class="fas fa-edit fa-fw"></i><% end %></td>
            <td style="width: 45px;"><%= link_to game, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="far fa-trash-alt fa-fw"></i><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>
  <center>
    <table>
      <tr>
        <td><%= paginate @games %></td>
      </tr>
    </table>

    <table>
      <tr>
        <td><%= page_entries_info @games %></td>
      </tr>
    </table>
  </center>

  </div>
</div>

<p align="right">
  <button type="button" class="btn btn-light btn-sm">
    <a class="nav-link" href="/games/new"><i class="fas fa-plus-circle"></i> Add Game</a>
  </button>
</p>

<br>
<br>

</div>

<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">

    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawChart() {

        // Create the data table.
        var data = JSON.parse('<%= @most.to_json.html_safe -%>');
        data = [['Game', 'Logs']].concat(data);
        data = google.visualization.arrayToDataTable(data);

        // Set chart options
        var options = {
                       height: 400,
                       bar: { groupWidth: "30%" },
                       colors: ['#ffcc00'],
                       legend: { position: "none" },
                      }

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>

</head>

<div class="container">
<br>
<p id="notice"><%= notice %></p>

<br>

<h4><i class="fas fa-chart-line"></i> MOST PLAYED GAMES</h4>
<div id="chart_div" style="width: 100%;"></div>

  <br><br> 

<h4><i class="fas fa-dice"></i> GAMES</h4>

<table class="table table-borderless table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Year</th>
      <th scope="col">Publisher</th>
      <th scope="col">Designers</th>
      <th scope="col">Player count</th>
      <th scope="col">Owned</th>
      <th scope="col">Logs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <th scope="row" style="width: 40px;"><%= game.id %></th>
        <td><%= game.name %></td>
        <td><%= game.year %></td>
        <td><%= game.publisher.name %></td>
        <td>
          <ul class="list-unstyled">
            <% for game_designer in game.game_designers %>
             <li><%= game_designer.designer.name %></li>
            <% end %>
          </ul>
        </td>
        <td><%= game.pcount %></td>
        <td><%=h show_check_icon(game.owned) %></td>
        <td><%= Log.where(game_id: game.id).count %></td>
        <td style="width: 45px;"><%= link_to game do %><i class="far fa-eye fa-fw"></i><% end %></td>
        <td style="width: 45px;"><%= link_to edit_game_path(game) do %><i class="fas fa-edit fa-fw"></i><% end %></td>
        <td style="width: 45px;"><%= link_to game, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="far fa-trash-alt fa-fw"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p align="right">
  <button type="button" class="btn btn-light btn-sm">
    <a class="nav-link" href="/games/new"><i class="fas fa-plus-circle"></i> Add Game</a>
  </button>
</p>

<br>
<br>

</div>
